{
    "name": "autonomous-testing-api",
    "version": "1.0.0",
    "description": "REST API for Autonomous Testing experiment - User CRUD with JWT authentication",
    "main": "src/app.js",
    "scripts": {
        "start": "node src/app.js",
        "dev": "nodemon src/app.js",
        "test:unit": "jest --testPathPatterns=tests/unit --coverage --verbose",
        "test:contract": "jest --testPathPatterns=tests/contract --verbose",
        "test:functional": "jest --testPathPatterns=tests/functional --runInBand --forceExit --verbose",
        "test:security": "jest --testPathPatterns=tests/security --runInBand --forceExit --verbose",
        "test:performance": "./tests/performance/run-load-tests.sh"
    },
    "keywords": [
        "api",
        "rest",
        "express",
        "jwt",
        "autonomous-testing"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "better-sqlite3": "^12.6.2",
        "cors": "^2.8.6",
        "dotenv": "^17.2.4",
        "express": "^5.2.1",
        "jsonwebtoken": "^9.0.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.29.0",
        "@pact-foundation/pact": "^16.2.0",
        "babel-jest": "^30.2.0",
        "jest": "^30.2.0",
        "nodemon": "^3.1.11",
        "supertest": "^7.2.2"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/services/**/*.js",
            "src/controllers/**/*.js",
            "src/middlewares/**/*.js"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!uuid)"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 90,
                "branches": 85,
                "functions": 90,
                "lines": 90
            }
        }
    }
}